<viewdata model="ViewEngineIntegrationTesting.ViewEngines.Spark.HelloSpark.AirViewModel" />
<content:head>
    <Asset name="jquery" />
    <script type="text/javascript">
      $(document).ready(function () {
      var renderView = function (data) {
      $("#viewOutputArea").append(data);
      }

      var takeABreath = function (breathIn) {
      $.post("/Air/Breathe", { TakeABreath: breathIn }, renderView);
      }

      $("#yesButton").click(function () { takeABreath(true); });
      $("#noButton").click(function () { takeABreath(false); });
      });
    </script>
</content:head>
<content:title>Do we have lift-off?</content:title>
<content:header>What do we wanna do?</content:header>
<div>
    ${Model.Text}</div>
<div>
    <input id="yesButton" type="button" value="Yes" />
    <input id="noButton" type="button" value="No" />
</div>
<div id="viewOutputArea"></div>

<content:footer>That's right baby!</content:footer>

!{this.LinkTo<ViewEngineIntegrationTesting.ViewEngines.Spark.FireInputModel>().Text("Light her up!")}
!{this.LinkTo<ViewEngineIntegrationTesting.ViewEngines.Spark.WaterInputModel>().Text("Cool her down!")} 
!{this.LinkTo<ViewEngineIntegrationTesting.ViewEngines.Spark.EarthViewModel>().Text("Go to ground!")} 
!{this.LinkTo<ViewEngineIntegrationTesting.ViewEngines.Spark.RemInputModel>().Text("Get some sleep!")}